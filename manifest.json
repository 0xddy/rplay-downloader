{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.2.3",
  "description": "__MSG_extDescription__",
  "default_locale": "zh_CN",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://*.rplay.live/*",
    "*://*.rplay-cdn.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://rplay.live/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
